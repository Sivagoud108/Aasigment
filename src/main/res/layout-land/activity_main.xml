<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#A19C9C"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <include layout="@layout/toolbar"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_70sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:padding="15dp"
                        android:text="PLU"
                        android:textColor="#F2120B01"
                        android:textSize="30dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_weight="1.5"
                        android:text="1"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:background="#F2120B01"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_70sdp">
                    <TextView
                        android:layout_weight="0.2"
                        android:layout_width="match_parent"
                        android:text="Chicken Curry Cut"
                        android:textColor="#F2120B01"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:padding="@dimen/_18sdp"
                        android:layout_height="match_parent"/>
                    <!--   <TextView
                           android:layout_weight="0.7"
                           android:text="₹0"
                           android:textSize="20dp"
                           android:textColor="@color/white"
                           android:background="#F2352304"
                           android:gravity="center"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"/>-->
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="2dp"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="595dp"
                        android:layout_height="match_parent"
                        android:padding="15dp"
                        android:text="Tara"
                        android:textColor="#F2120B01"
                        android:textSize="30dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_470sdp"
                    android:background="#F2120B01">

                    <TextView
                        android:layout_width="81dp"
                        android:layout_height="46dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="24dp"
                        android:layout_marginBottom="15dp"
                        android:gravity="center"
                        android:text="5"
                        android:textColor="@color/white"
                        android:textSize="25dp" />

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="36dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="0dp"
                        android:layout_marginBottom="0dp"
                        android:gravity="center"
                        android:text="g"
                        android:textColor="@color/white" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_65sdp">
                    <TextView
                        android:layout_weight="0.2"
                        android:layout_width="match_parent"
                        android:text="MRP"
                        android:textColor="#F2120B01"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:padding="18dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:layout_weight="0.5"
                        android:text="₹299"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:background="#F2120B01"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="2dp"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_70sdp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1.7">

                        <TextView
                            android:layout_width="170dp"
                            android:layout_height="match_parent"
                            android:padding="15dp"
                            android:text="Weight"
                            android:textColor="#F2120B01"
                            android:textSize="30dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                    android:layout_weight="0.3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="#F2120B01"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="81dp"
                        android:layout_height="46dp"
                        android:gravity="center"
                        android:textSize="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="24dp"
                        android:layout_marginBottom="15dp"
                        android:text="0"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="36dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="0dp"
                        android:layout_marginBottom="0dp"
                        android:gravity="center"
                        android:text="g"
                        android:textColor="@color/white" />

                </RelativeLayout>
                </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_70sdp">
                    <TextView
                        android:layout_weight="1.7"
                        android:layout_width="0dp"
                        android:text="Price"
                        android:textColor="#F2120B01"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:padding="15dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:layout_weight="0.3"
                        android:text="₹0"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:background="#F2120B01"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <include layout="@layout/buttom"
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:layout_height="match_parent"
            android:layout_marginTop="90dp"/>
    </LinearLayout>

</ScrollView>